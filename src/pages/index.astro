---
import Layout from "../layouts/Layout.astro";
---
<script is:inline>
    function onSubmit(e) {
        const input = document.getElementById('code');
        e.preventDefault();
        window.location.href = '/cv/' + input.value;
        return false;
    }
</script>
<Layout title="Astro CV">
  <div class="home">
    <form class="card" onsubmit="return onSubmit(event)">
        <div>Enter the code of the CV to view</div>
      <div class="form-field">

        <input id="code" value='' />
      </div>
      <button type="submit">Enter</button>
    </form>
</div>
  <style lang="scss">
    .home {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100vw;
      .form-field {
        width:100%;
      }
      input {
        padding: 0.5rem;
        width:100%
      }
      button {
        height: 3rem;
        font-weight: 600;
      }
      .card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
    }
  </style>
</Layout>
